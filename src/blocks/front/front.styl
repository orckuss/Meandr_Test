.front
  display flex
  flex-direction column
  align-items center
  padding-top 62px
  padding-right 20px
  padding-left 20px

  &__tagline
    margin-top 0
    margin-bottom 21px

  &__text
    margin-top 0
    margin-bottom 30px

    font-family "Roboto", "Arial", sans-serif
    font-style normal
    font-weight 400
    font-size 16px
    line-height 26px
    text-align center
    color #4A4556

    span
      font-weight 700
      color #F47821

  &__btn
    margin-bottom 26px

  &__img
    display none
