.front
  display flex
  flex-direction column
  align-items center
  padding-top 62px
  padding-right 20px
  padding-left 20px

  &__tagline
    margin-top 0
    margin-bottom 21px

  &__text
    margin-top 0
    margin-bottom 30px

    font-family "Roboto", "Arial", sans-serif
    font-style normal
    font-weight 400
    font-size 16px
    line-height 26px
    text-align center
    color #4A4556

    span
      font-weight 700
      color #F47821

  &__btn
    margin-bottom 26px

  &__img
    display none

@media (min-width: tablet-width)
  .front
    padding-top 80px
    padding-right 0
    padding-left 0

    &__tagline
      margin-bottom 30px

    &__text
      margin-bottom 40px

    &__btn
      margin-bottom 50px

    &__img
      display block

@media (min-width: desktop-width)
  .front
    padding-top 162px

    &__tagline
      margin-bottom 21px

    &__text
      margin-bottom 30px

    &__btn
      margin-bottom 126px
      margin-left 35px
