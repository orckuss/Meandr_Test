.btn
  position relative

  display inline-block
  padding-top 18px
  padding-right 30px
  padding-bottom 16px
  padding-left 46px

  font-family "Gilroy", "Arial", sans-serif
  font-style normal
  font-weight 400
  font-size 16px
  line-height 20px
  letter-spacing 0.02em
  text-transform uppercase
  color #222222

  border none
  background none
  outline none
  cursor pointer

  &::before
    content ""
    position absolute
    top 20px
    left 20px

    width 14px
    height 14px

    background-image url("../img/plus.svg")

  &::after
    content ""
    position absolute
    top 0
    left 0

    width 54px
    height 54px

    border-radius 111px
    background-color rgba(#878787, 0.05)

  &:hover,
  &:focus
    &::after
      width 100%
      transition 0.2s

  &:active
    opacity 0.8

  &--theme-form
    padding-top 20px
    padding-right 0
    padding-left 0

    font-size 14px
    line-height 17px
    letter-spacing 0.04em
    color #F47821
    text-align center

    background-color #FFFFFF
    border-radius 111px
    box-shadow 0px 4px 8px rgba(0, 0, 0, 0.12)

    &::before,
    &::after
      display none

    &:hover,
    &:focus
      opacity 0.8

    &:active
      opacity 0.6
