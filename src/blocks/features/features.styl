.features
  background-color #F7F5FA
  padding-bottom 80px

  &__list
    position relative

    display flex
    width 67.5%
    margin 0 auto
    margin-top -99px
    padding 0
    flex-wrap wrap

    background-color #FFFFFF
    list-style none

  &__item
    width 50%
    padding-top 48px
    padding-right 70px
    padding-bottom 61px
    padding-left 60px

    border 1px solid #EDEDED

  &__title
    margin-top 0
    margin-bottom 12px

    font-family "DINPro", "Arial", sans-serif
    font-style normal
    font-weight 400
    font-size 12px
    line-height 19px
    letter-spacing 0.04em
    color #F47821
    text-transform uppercase

  &__text
    margin 0

    font-family "DINPro", "Arial", sans-serif
    font-style normal
    font-weight 400
    font-size 24px
    line-height 30px
    letter-spacing -0.03em
    color #222222
